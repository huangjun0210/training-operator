apiVersion: "tensorflow.org/v1alpha1"
kind: "TfJob"
metadata:
  name: "simple-job"
spec:
  replicaSpecs:
    - replicas: 1
      tfReplicaType: MASTER
      template:
        spec:
          containers:
            - image: gcr.io/tf-on-k8s-dogfood/tf_sample:{{image_tag}}
              name: tensorflow
          restartPolicy: OnFailure
    - replicas: 1
      tfReplicaType: WORKER
      template:
        spec:
          containers:
            - image: gcr.io/tf-on-k8s-dogfood/tf_sample:{{image_tag}}
              name: tensorflow
          restartPolicy: OnFailure
    - replicas: 2
      tfReplicaType: PS